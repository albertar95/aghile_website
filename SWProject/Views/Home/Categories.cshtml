@model SWProject.ViewModels.Front.CategoryViewModel


@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="rtop" id="rrtop"></div>
<div class="ltop" id="lltop"></div>
<div class="mtop col-8" id="mmtop"></div>
<div id="contentcolumns" class="col-12 col-lg-12">
    <div class="col-12 col-lg-1" style="margin-top:0;" id="rrtop2">
        <div class="col-lg-12 col-md-12 col-sm-12" id="rihgtbordered"></div>
    </div>
    <div class="col-12 col-lg-10" id="mmtop2">
        <div class="col-lg-12 col-md-12 col-sm-12 col-centered" style="padding:50px;" id="middleColumn">
            <div class="main-content-wrapper section-padding-100" style="margin-top:300px;">
                <div class="container">
                    <div class="row justify-content-center">
                        <!-- ============= Post Content Area Start ============= -->
                        <div class="col-12 col-lg-12 col-md-12 col-sm-12" style="text-align:right;word-wrap:break-word;">
                            <div class="post-content-area mb-100">
                                <!-- Catagory Area -->
                                <div class="world-catagory-area">
                                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                                        <li class="title" style="right:0;position:absolute;margin-right:50px;">@Model.ThisCategory</li>
                                        <li class="nav-item">
                                            <a class="nav-link active" id="tab1" data-toggle="tab" href="#world-tab-1" role="tab" aria-controls="world-tab-1" aria-selected="true">همه</a>
                                        </li>
                                    </ul>
                                    @Html.Hidden("pagetitle", Model.ThisCategory)
                                    <div class="tab-content" id="myTabContent">
                                        @if (Model.ThisCategory == "برنامه صراط مستقیم")
                                        {
                                            <div class="tab-pane fade show active" role="tabpanel" aria-labelledby="tab1">
                                                <!-- Single Blog Post -->
                                                <div class="row">
                                                    <div class="col-12 col-md-12" style="text-align:right;float:right;" id="world-tab-1">
                                                        @foreach (var soss in Model.serats)
                                                        {
                                                            <div class="col col-md-12" style="text-align:right;float:right;">
                                                                <div class="single-blog-post post-style-4 d-flex align-items-center mmedia">
                                                                    <!-- Post Thumbnail -->
                                                                    <div class="post-thumbnail">
                                                                        @if (soss.ProfilePicId != null)
                                                                        {
                                                                            <img style="height:150px !important;width:100px !important;padding:5px;" src="@SWProject.Helpers.Front.Utilities.ToBase64ImageString(soss.Img_DataFiles.FileBody)" alt="">
                                                                        }
                                                                        @if (soss.ProfilePicId == null)
                                                                        {
                                                                            <img style="height:150px !important;width:100px !important;padding:5px;" src="@Url.Content("~/Content/FrontTemplate/img/no-image-icon.png")" />
                                                                        }
                                                                    </div>
                                                                    <!-- Post Content -->
                                                                    <div class="post-content" style="width:100% !important;">
                                                                        @if (soss.Type == 4)
                                                                        {
                                                                            <a href="~/show?title=@soss.Title" class="headline">
                                                                                <h5>@soss.Title</h5>
                                                                            </a>
                                                                        }
                                                                        @if (soss.Type == 2)
                                                                        {
                                                                            <a href="~/video?title=@soss.Title" class="headline">
                                                                                <h5>@soss.Title</h5>
                                                                            </a>
                                                                        }
                                                                        @if (soss.Type == 1)
                                                                        {
                                                                            <a href="~/audio?title=@soss.Title" class="headline" style="word-wrap:break-word;">
                                                                                <h5>@soss.Title</h5>
                                                                            </a>
                                                                        }
                                                                        <!-- Post Meta -->
                                                                        <div class="post-meta">
                                                                            @*<p><a href="#" class="post-author">@fov.User.Name</a> on <a href="#" class="post-date">@fov.CreationDate</a></p>*@
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                        }
                                                    </div>
                                                </div>
                                            </div>

                                        }
                                        @if (Model.ThisCategory == "فیلم" || Model.ThisCategory == "صوت")
                                        {
                                            <div class="tab-pane fade show active"  role="tabpanel" aria-labelledby="tab1">
                                                <!-- Single Blog Post -->
                                                <div class="row">
                                                    <div class="col-12 col-md-12" style="text-align:right;float:right;" id="world-tab-1">
                                                        @foreach (var fov in Model.medias)
                                                        {
                                                            <div class="col col-md-12" style="text-align:right;float:right;">
                                                                <div class="single-blog-post post-style-4 d-flex align-items-center mmedia">
                                                                    <!-- Post Thumbnail -->
                                                                    <div class="post-thumbnail">
                                                                    @if (fov.ProfilePicId != null)
                                                                    {
                                                                        <img style="height:150px !important;width:100px !important;padding:5px;" src="@SWProject.Helpers.Front.Utilities.ToBase64ImageString(fov.Img_DataFiles.FileBody)" alt="">
                                                                    }
                                                                    @if (fov.ProfilePicId == null)
                                                                    {
                                                                        <img style="height:150px !important;width:100px !important;padding:5px;" src="@Url.Content("~/Content/FrontTemplate/img/no-image-icon.png")" />
                                                                    }
                                                                </div>
                                                                    <!-- Post Content -->
                                                                    <div class="post-content" style="width:100% !important;">
