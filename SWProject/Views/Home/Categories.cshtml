                                                            <div class="post-content">
                                                                <a href="~/paper?title=@ps.Title" class="headline">
                                                                    <h5>@ps.Title</h5>
                                                                </a>
                                                                <!-- Post Meta -->
                                                                <div class="post-meta">
                                                                    @*<p><a href="#" class="post-author">@ps.User.Name</a> on <a href="#" class="post-date">@ps.CreationDate</a></p>*@
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>

                                        }
                                        @if (Model.ThisCategory == "کتابخانه")
