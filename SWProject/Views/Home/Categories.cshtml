                                                @foreach (var fs in Model.files)
                                                {
                                                    <div class="col col-md-12" style="text-align:right;float:right;">
                                                        <div class="single-blog-post post-style-4 d-flex align-items-center paper mmedia">
                                                            <!-- Post Thumbnail -->
                                                            <div class="post-thumbnail">
                                                                @if (fs.ImgId != null)
                                                                {
                                                                    <img style="height:150px !important;width:100px !important;padding:5px;" src="@SWProject.Helpers.Front.Utilities.ToBase64ImageString(fs.Img_DataFiles.FileBody)" alt="">
                                                                }
