                                            <div class="tab-pane fade show active" id="world-tab-1" role="tabpanel" aria-labelledby="tab1">
                                                <!-- Single Blog Post -->
                                                @foreach (var ps in Model.papers)
                                                {
                                                    <div class="col col-md-12" style="text-align:right;float:right;">
                                                        <div class="single-blog-post post-style-4 d-flex align-items-center paper mmedia">
                                                            <!-- Post Thumbnail -->
                                                            <div class="post-thumbnail">
                                                            @if (ps.ProfilePicId != null)
                                                                                {
                                                                            <img style="height:150px !important;width:100px !important;padding:5px;" src="@SWProject.Helpers.Front.Utilities.ToBase64ImageString(ps.Img_DataFiles.FileBody)" alt="">
                                                                                }
