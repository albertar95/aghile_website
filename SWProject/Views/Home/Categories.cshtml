                                                                        <div class="post-meta">
                                                                            @*<p><a href="#" class="post-author">@fov.User.Name</a> on <a href="#" class="post-date">@fov.CreationDate</a></p>*@
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                        }
                                                    </div>
                                                </div>
                                            </div>

                                        }
                                        @if (Model.ThisCategory == "مقاله")
