                                                                {
                                                                    <img style="height:150px !important;width:100px !important;padding:5px;" src="@Url.Content("~/Content/FrontTemplate/img/no-image-icon.png")" />
                                                                }
                                                            </div>

                                                            <!-- Post Content -->
                                                            <div class="post-content">
                                                                <a href="~/bookDetail?title=@fs.Caption" class="headline">
                                                                    <h5>@fs.Caption</h5>
                                                                </a>
                                                                <!-- Post Meta -->
                                                                <div class="post-meta">
                                                                    @*<p><a href="#" class="post-author">@fs.User.Name</a> on <a href="#" class="post-date">@fs.TimeStamp</a></p>*@
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>

                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

