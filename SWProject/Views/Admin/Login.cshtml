
@{
    Layout = null;
}

<head>
    <title>سایت تحقیقاتی حضرت عقیله</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="@Url.Content("~/Content/BackTemplate/bootstrap/css/bootstrap.min.css")" rel="stylesheet">
    <!-- styles -->
    <link href="@Url.Content("~/Content/BackTemplate/css/styles.css")" rel="stylesheet">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>
<body class="login-bg">
    <div class="header">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- Logo -->
                    <div class="logo" style="text-align:right;">
                        <h1><a href="/">سایت تحقیقاتی حضرت عقیله</a></h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
@using (Html.BeginForm("Authen", "Admin", FormMethod.Post))
{
    <div class="page-content container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-wrapper">
                    <div class="box">
                        <div class="content-wrap">
                            <h6>نام کاربری و کلمه عبور خود را وارد نمایید</h6>
                            <div class="social">

                                    <span>
                                        <img height="150" width="150" src="~/Content/BackTemplate/images/loginmerryspell.png" />
                                    </span>                                    
                                <div class="division">
                                    <hr class="left">
                                    <span>ورود</span>
                                    <hr class="right">
                                </div>
                            </div>
                            <input style="text-align:right;" class="form-control" name="usrname" type="text" placeholder="نام کاربری">
                            <input style="text-align:right;" class="form-control" name="pass" type="password" placeholder="کلمه عبور">
                            @if (TempData["notSuccessfulLogin"] != null)
                            {
                                <div class="alert alert-danger fadeIn alert-dismissable">
                                    <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
                                    <strong>@TempData["notSuccessfulLogin"]</strong>
                                </div>
                            }
                            <div class="action">
                                <button class="btn btn-primary signup" type="submit">ورود</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="@Url.Content("~/Content/BackTemplate/bootstrap/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Content/BackTemplate/js/custom.js")"></script>
</body>
