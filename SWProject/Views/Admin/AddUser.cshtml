@model SWProject.Models.DomainModel.User

@{
    ViewBag.Title = "ایجاد کاربر";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("SubmitAddUser", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", id = "addUserform" }))
{
    @Html.ValidationSummary()
    @Html.HiddenFor(Model => Model.Id)
    <div class="row">
        <div class="col-md-12">
            <div class="content-box-header">
                <div class="panel-title" style="direction:rtl;text-align:right;float:right;">@ViewBag.Title</div>
            </div>
            <div class="content-box-large">
                <div class="panel-body" style="min-height:525px;">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="content-box-large">
                                <div class="panel-body">
                                    <fieldset>
                                        <div class="form-group">
                                            @Html.LabelFor(Model => Model.Name)
                                            @Html.TextBoxFor(Model => Model.Name, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(Model => Model.Name)
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(Model => Model.ProfilePicId)
                                            @Html.Upload("ProfilePicId", new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(Model => Model.UserName)
                                            @Html.TextBoxFor(Model => Model.UserName, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(Model => Model.Password)
                                            @Html.PasswordFor(Model => Model.Password, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(Model => Model.Tel)
                                            @Html.TextBoxFor(Model => Model.Tel, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(Model => Model.Grade)
                                            @{
                                                List<SelectListItem> listItems = new List<SelectListItem>();
                                                listItems.Add(new SelectListItem
                                                {
                                                    Text = "ادمین عادی",
                                                    Value = "1"
                                                });
                                                listItems.Add(new SelectListItem
                                                {
                                                    Text = "ادمین اصلی",
                                                    Value = "2"
                                                });
                                            }

                                            @Html.DropDownListFor(model => model.Grade, listItems, "---نوع کاربر را انتخاب کنید---", new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(Model => Model.Enable)
                                            @Html.CheckBoxFor(Model => Model.Enable, new { @class = "checkbox", @checked = true })
                                        </div>
                                    </fieldset>
                                    <div>
                                        <input type="submit" class="btn btn-success btn-large" value="ثبت" id="adduser" style="font-size:18px;min-width:100px;" />
                                        <a href="@Url.Action("Users","Admin")" class="btn btn-default"><i class="glyphicon glyphicon-arrow-right"></i>&nbsp; بازگشت &nbsp;</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
                                                }
@section Scripts{
    <script src="@Url.Content("~/Scripts/AjaxForm/jquery.form.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
    $(function () {
    });
    </script>
}